#!/usr/bin/env ruby
def system!(*args)
  log "Executing #{args}"
  system(*args) ? log("#{args} succeeded") : (log("#{args} failed"); abort)
end

def log(message)
  puts "[ bin/setup ] #{message}"
end

def setup
  log "== Installing dependencies =="
  system("bundle check") || system!("bundle install")
  system!("bun install")

  log "\n== Preparing database =="
  system! "bin/rails db:prepare"

  log "\n== Removing old logs and tempfiles =="
  system! "bin/rails log:clear tmp:clear"

  log "\n== Dropping & recreating the test database =="
  system!({ "RAILS_ENV" => "test" }, "bin/rails db:reset")

  log "All set up."
  log "To see commonly-needed commands, run: bin/setup help"
end

def help
  log "Useful commands:"
  log "  bin/dev # run app locally"
  log "  bin/ci # runs all tests and checks as CI would"
  log "  bin/rails rspec # run tests"
  log "  bin/setup help # show this help"
end

if ARGV[0] == "help"
  help
else
  setup
end
