# Example .env file for Kamal deployment
# Copy this to .env.kamal and fill in your actual values
# This file should be gitignored and NOT committed

# Docker registry password (create access token at https://hub.docker.com/settings/security)
KAMAL_REGISTRY_PASSWORD=your_docker_hub_access_token_here

# PostgreSQL password for database accessory
# Generate with: openssl rand -base64 32
POSTGRES_PASSWORD=your_strong_postgres_password_here

# Database URL for your Rails application
# Format: postgresql://username:password@host:port/database
# Note: host should be database_name-db (Kamal's internal network name)
DATABASE_URL=postgresql://database_name:your_strong_postgres_password_here@database_name-db:5432/database_name

# Redis URL for Sidekiq
# Note: host should be database_name-redis (Kamal's internal network name)
REDIS_URL=redis://database_name-redis:6379/0