#!/usr/bin/env bash
 
# Kamal 2 Secrets Configuration
# Load secrets from .env and make them available to Kamal
# Format: VARIABLE=$VARIABLE (Kamal handles the export)
 
# Load .env file first
set -a
source .env
set +a
 
# Make secrets available (no 'export' keyword - Kamal handles that)
KAMAL_REGISTRY_PASSWORD=$KAMAL_REGISTRY_PASSWORD
RAILS_MASTER_KEY=$RAILS_MASTER_KEY
POSTGRES_PASSWORD=$POSTGRES_PASSWORD
DATABASE_URL=$DATABASE_URL
REDIS_URL=$REDIS_URL
SECRET_KEY_BASE=$SECRET_KEY_BASE