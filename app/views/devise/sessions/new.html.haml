!!!
%html{lang: "pl"}
  %head
    %meta{charset: "UTF-8"}/
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}/
    %title Logowanie - Panel Administracyjny
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_include_tag "application", "data-turbo-track": "reload", type: "module"
    
  %body.min-h-screen.flex.items-center.justify-center{class: "bg-gradient-to-b from-[#FAB12F] to-[#FEF3E2]"}
    .w-full.max-w-md.px-6
      / Logo and Title
      .text-center.mb-8
        %img.mx-auto.mb-6{src: "https://www.mza.waw.pl/wp-content/themes/mza/img/mza_logo.svg", alt: "MZA Logo", class: "h-24"}
        %h1.text-3xl.font-bold.mb-2{class: "text-[#FA812F]"} Panel Administracyjny
        %p.text-gray-600 Tablica Ogłoszeń
      
      / Login Form Card
      .bg-white.rounded-lg.shadow-lg.p-8
        %h2.text-2xl.font-bold.mb-6.text-center.text-gray-800 Logowanie
        
        / Flash Messages
        - if alert.present?
          .mb-4.p-4.rounded-md.bg-red-50.border.border-red-200
            %p.text-red-800.font-semibold= alert
        
        - if notice.present?
          .mb-4.p-4.rounded-md.bg-green-50.border.border-green-200
            %p.text-green-800.font-semibold= notice
        
        / Login Form
        = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f|
          / Username Field
          .form-group
            = f.label :username, "Nazwa użytkownika", class: "block text-sm font-bold text-gray-700 mb-2"
            = f.text_field :username, autofocus: true, autocomplete: "username", class: "w-full px-4 py-3 border-2 border-[#FEF3E2] rounded-md focus:outline-none focus:border-[#FA812F] transition-colors", placeholder: "Wprowadź nazwę użytkownika"
          
          / Password Field
          .form-group
            = f.label :password, "Hasło", class: "block text-sm font-bold text-gray-700 mb-2"
            = f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-3 border-2 border-[#FEF3E2] rounded-md focus:outline-none focus:border-[#FA812F] transition-colors", placeholder: "Wprowadź hasło"
          
          / Remember Me
          - if devise_mapping.rememberable?
            .flex.items-center
              = f.check_box :remember_me, class: "h-4 w-4 text-[#FA812F] border-gray-300 rounded focus:ring-[#FA812F]"
              = f.label :remember_me, "Zapamiętaj mnie", class: "ml-2 text-sm text-gray-700"
          
          / Submit Button
          .form-group
            = f.submit "Zaloguj się", class: "w-full py-3 px-4 bg-[#FA812F] hover:bg-[#E87020] text-white font-bold rounded-md transition-colors cursor-pointer"
