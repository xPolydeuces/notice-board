= form_with model: [:admin, rss_feed], local: true do |f|
  .space-y-6
    - if rss_feed.errors.any?
      .bg-red-50.border.border-red-200.rounded-md.p-4
        .flex
          = lucide_icon('alert-circle', class: 'w-5 h-5 text-red-400 mr-3 flex-shrink-0 mt-0.5')
          .div
            %h3.text-sm.font-medium.text-red-800
              = t('admin.rss_feeds.form.errors', count: rss_feed.errors.count)
            .mt-2.text-sm.text-red-700
              %ul.list-disc.list-inside
                - rss_feed.errors.full_messages.each do |message|
                  %li= message

    .grid.grid-cols-1.gap-6
      / Name field
      .div
        = f.label :name, t('admin.rss_feeds.form.name'), class: 'block text-sm font-medium text-gray-700 mb-2'
        = f.text_field :name, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-[#FA812F] focus:ring-[#FA812F] sm:text-sm', placeholder: t('admin.rss_feeds.form.name_placeholder'), required: true
        %p.mt-1.text-sm.text-gray-500= t('admin.rss_feeds.form.name_help')

      / URL field
      .div
        = f.label :url, t('admin.rss_feeds.form.url'), class: 'block text-sm font-medium text-gray-700 mb-2'
        = f.url_field :url, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-[#FA812F] focus:ring-[#FA812F] sm:text-sm', placeholder: t('admin.rss_feeds.form.url_placeholder'), required: true
        %p.mt-1.text-sm.text-gray-500= t('admin.rss_feeds.form.url_help')

    / Active checkbox
    .flex.items-start
      .flex.items-center.h-5
        = f.check_box :active, class: 'focus:ring-[#FA812F] h-4 w-4 text-[#FA812F] border-gray-300 rounded'
      .ml-3.text-sm
        = f.label :active, t('admin.rss_feeds.form.active'), class: 'font-medium text-gray-700'
        %p.text-gray-500= t('admin.rss_feeds.form.active_help')

    / Action buttons
    .flex.items-center.justify-end.gap-3.pt-5.border-t.border-gray-200
      = link_to t('admin.rss_feeds.form.cancel'), admin_rss_feeds_path, class: 'px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#FA812F]'
      = f.submit t('admin.rss_feeds.form.submit'), class: 'inline-flex justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-[#FA812F] hover:bg-[#E87020] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#FA812F]'