- content_for :title, t('admin.dashboard.title')

= render Admin::PageHeaderComponent.new(title: t('admin.dashboard.title'), subtitle: t('admin.dashboard.subtitle'), icon: 'layout-dashboard')
  


.grid.grid-cols-1.md_grid-cols-2.lg_grid-cols-4.gap-6
  / Users Card
  .bg-white.rounded-lg.shadow.p-6
    .flex.items-center.justify-between
      .div
        %p.text-sm.font-medium.text-gray-600= t('admin.dashboard.users')
        %p.text-3xl.font-bold.text-gray-900= @stats[:users_count]
      .w-12.h-12.rounded-lg.bg-blue-100.flex.items-center.justify-center
        = lucide_icon('users', class: 'w-6 h-6 text-blue-600')
  
  / Locations Card
  .bg-white.rounded-lg.shadow.p-6
    .flex.items-center.justify-between
      .div
        %p.text-sm.font-medium.text-gray-600= t('admin.dashboard.locations')
        %p.text-3xl.font-bold.text-gray-900= @stats[:locations_count]
      .w-12.h-12.rounded-lg.bg-green-100.flex.items-center.justify-center
        = lucide_icon('map-pin', class: 'w-6 h-6 text-green-600')
  
  / News Posts Card
  .bg-white.rounded-lg.shadow.p-6
    .flex.items-center.justify-between
      .div
        %p.text-sm.font-medium.text-gray-600= t('admin.dashboard.news_posts')
        %p.text-3xl.font-bold.text-gray-900= @stats[:news_posts_count]
      .w-12.h-12.rounded-lg.bg-amber-100.flex.items-center.justify-center
        = lucide_icon('newspaper', class: 'w-6 h-6 text-amber-600')
  
  / RSS Feeds Card
  .bg-white.rounded-lg.shadow.p-6
    .flex.items-center.justify-between
      .div
        %p.text-sm.font-medium.text-gray-600= t('admin.dashboard.rss_feeds')
        %p.text-3xl.font-bold.text-gray-900= @stats[:rss_feeds_count]
      .w-12.h-12.rounded-lg.bg-orange-100.flex.items-center.justify-center
        = lucide_icon('rss', class: 'w-6 h-6 text-orange-600')
