= form_with model: [:admin, news_post], local: true do |f|
  .space-y-6{"data-controller": "post-type"}
    - if news_post.errors.any?
      .bg-red-50.border.border-red-200.rounded-md.p-4
        .flex
          = lucide_icon('alert-circle', class: 'w-5 h-5 text-red-400 mr-3 flex-shrink-0 mt-0.5')
          .div
            %h3.text-sm.font-medium.text-red-800
              = t('admin.news_posts.form.errors', count: news_post.errors.count)
            .mt-2.text-sm.text-red-700
              %ul.list-disc.list-inside
                - news_post.errors.full_messages.each do |message|
                  %li= message

    / Title field
    .div
      = f.label :title, t('admin.news_posts.form.title'), class: 'block text-sm font-medium text-gray-700 mb-2'
      = f.text_field :title, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-[#FA812F] focus:ring-[#FA812F] sm:text-sm', placeholder: t('admin.news_posts.form.title_placeholder'), required: true, autofocus: true

    / Post type selection
    .div
      = f.label :post_type, t('admin.news_posts.form.post_type'), class: 'block text-sm font-medium text-gray-700 mb-2'
      = f.select :post_type, options_for_select(NewsPost.post_types.map { |k, _v| [t("admin.news_posts.types.#{k}"), k] }, news_post.post_type), {}, class: 'mt-1 block w-full py-2 rounded-md border-gray-300 shadow-sm focus:border-[#FA812F] focus:ring-[#FA812F] sm:text-sm', required: true, data: { post_type_target: 'select', action: 'change->post-type#toggle' }
      %p.mt-1.text-sm.text-gray-500= t('admin.news_posts.form.post_type_help')

    / Location selection - only for admins and location users
    - if current_user.admin_or_superadmin? || current_user.location?
      .div
        = f.label :location_id, t('admin.news_posts.form.location'), class: 'block text-sm font-medium text-gray-700 mb-2'
        - if current_user.admin_or_superadmin?
          = f.select :location_id, options_from_collection_for_select(@locations, :id, :full_name, news_post.location_id), { include_blank: t('admin.news_posts.form.general_post') }, class: 'mt-1 block w-full py-2 rounded-md border-gray-300 shadow-sm focus:border-[#FA812F] focus:ring-[#FA812F] sm:text-sm'
          %p.mt-1.text-sm.text-gray-500= t('admin.news_posts.form.location_help')
        - elsif current_user.location?
          = f.select :location_id, options_from_collection_for_select(@locations, :id, :full_name, current_user.location_id), {}, class: 'mt-1 block w-full py-2 rounded-md border-gray-300 shadow-sm focus:border-[#FA812F] focus:ring-[#FA812F] sm:text-sm', disabled: true
          = f.hidden_field :location_id, value: current_user.location_id
          %p.mt-1.text-sm.text-gray-500= t('admin.news_posts.form.location_locked')

    / Content fields - different for each post type
    / Plain text content
    .div{"data-post-type-target": "textField", class: news_post.post_type == 'plain_text' || news_post.post_type.nil? ? '' : 'hidden'}
      = f.label :content, t('admin.news_posts.form.content'), class: 'block text-sm font-medium text-gray-700 mb-2'
      = f.text_area :content, rows: 10, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-[#FA812F] focus:ring-[#FA812F] sm:text-sm font-mono', placeholder: t('admin.news_posts.form.content_placeholder')
      %p.mt-1.text-sm.text-gray-500= t('admin.news_posts.form.content_help')

    / Rich text content
    .div{"data-controller": "trix-editor", "data-post-type-target": "richTextField", class: news_post.post_type == 'rich_text' ? '' : 'hidden'}
      = f.label :rich_content, t('admin.news_posts.form.rich_content'), class: 'block text-sm font-medium text-gray-700 mb-2'
      = f.rich_text_area :rich_content, data: { trix_editor_target: 'editor' }
      %p.mt-1.text-sm.text-gray-500= t('admin.news_posts.form.rich_content_help')

    / Image upload
    .div{"data-post-type-target": "imageField", class: news_post.post_type == 'image_only' ? '' : 'hidden'}
      = f.label :image, t('admin.news_posts.form.image'), class: 'block text-sm font-medium text-gray-700 mb-2'
      = f.file_field :image, accept: 'image/*', class: 'mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-[#FA812F] file:text-white hover:file:bg-[#E87020]'
      %p.mt-1.text-sm.text-gray-500= t('admin.news_posts.form.image_help')
      - if news_post.image.attached?
        .mt-2
          %p.text-sm.text-gray-700= t('admin.news_posts.form.current_image')
          = image_tag news_post.image.variant(resize_to_limit: [200, 200]), class: 'mt-2 rounded-md'

    / Action buttons
    .flex.items-center.justify-end.gap-3.pt-5.border-t.border-gray-200
      = link_to t('admin.news_posts.form.cancel'), admin_news_posts_path, class: 'px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#FA812F]'
      = f.submit class: 'inline-flex justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-[#FA812F] hover:bg-[#E87020] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#FA812F]'