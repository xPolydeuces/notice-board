.post-slide.absolute.inset-0.flex.flex-col.items-center.justify-center.text-center{ class: "#{index == 0 ? 'opacity-100' : 'opacity-0'} #{post.image_only? ? 'p-5' : 'p-10'}", data: { slide: true, index: index } }
  - if post.image_only?
    - if post.image.attached?
      = image_tag post.image, loading: 'eager', class: 'max-w-full max-h-full object-contain rounded-xl shadow-lg'
  - else
    .flex.flex-col.items-center.justify-center.w-full
      - if post.title.present?
        .text-6xl.font-bold.mb-8.leading-tight{ class: 'text-[#DD0303]' }= post.title
      - if post.plain_text?
        .text-4xl.leading-relaxed.text-gray-800.max-h-[60vh].overflow-y-auto.notice-board-scroll= simple_format(post.content)
      - elsif post.rich_text?
        .text-4xl.leading-relaxed.text-gray-800.max-h-[60vh].overflow-y-auto.notice-board-scroll.prose.prose-2xl.max-w-none= post.rich_content
      .text-2xl.text-gray-600.mt-8.italic
        = l(post.published_at, format: :long)