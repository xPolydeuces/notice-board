%div{ class: slide_classes, data: { slide: true, index: index, duration: post.display_duration * 1000 } }
  - if post.image_only?
    - if post.image.attached?
      = image_tag post.image, loading: 'eager', class: 'max-w-full max-h-full object-contain rounded-lg md:rounded-xl shadow-lg'
  - elsif post.pdf_only?
    - if post.pdf.attached?
      %iframe{ src: rails_blob_path(post.pdf), class: 'w-full h-full rounded-lg md:rounded-xl shadow-lg', frameborder: '0' }
  - else
    .flex.flex-col.items-center.justify-center.w-full.px-2.sm:px-4
      - if post.title.present?
        %div{ class: 'font-bold mb-4 sm:mb-6 leading-tight text-[#DD0303] text-[clamp(1.5rem,4vw,3.5rem)]' }= post.title
      - if post.plain_text?
        %div{ class: content_classes }= simple_format(post.content)
      - elsif post.rich_text?
        %div{ class: "#{content_classes} #{prose_classes}" }= post.rich_content
      %div{ class: 'text-gray-600 mt-4 sm:mt-6 italic text-[clamp(0.875rem,1.5vw,1.5rem)]' }
        = l(post.published_at, format: :long)