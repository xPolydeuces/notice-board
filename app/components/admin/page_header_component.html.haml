.mb-4.sm:mb-6.md:mb-8
  .flex.flex-col.sm:flex-row.items-start.sm:items-center.justify-between.gap-3.sm:gap-4
    .flex.items-center.gap-2.sm:gap-3
      - if icon
        .w-10.h-10.sm:w-12.sm:h-12.rounded-lg.bg-gradient-to-br.from-amber-100.to-orange-100.flex.items-center.justify-center
          = lucide_icon(icon, class: "w-5 h-5 sm:w-6 sm:h-6 text-amber-600")
      .div
        %h1.text-xl.sm:text-2xl.md:text-3xl.font-bold.text-gray-900= title
        - if subtitle
          %p.mt-1.text-xs.sm:text-sm.text-gray-500= subtitle
    - if content.present?
      .flex.items-center.gap-2.w-full.sm:w-auto
        = content