- if render?
  - flash_messages.each do |type, message|
    - if type.to_s == 'notice'
      .mb-5.p-4.rounded-md.font-bold{class: "bg-green-100 text-green-800 border-2 border-green-300"}
        = message
    - elsif type.to_s == 'alert'
      .mb-5.p-4.rounded-md.font-bold{class: "bg-red-100 text-red-800 border-2 border-red-300"}
        = message
    - elsif type.to_s == 'success'
      .mb-5.p-4.rounded-md.font-bold{class: "bg-green-100 text-green-800 border-2 border-green-300"}
        = message
    - elsif type.to_s == 'error'
      .mb-5.p-4.rounded-md.font-bold{class: "bg-red-100 text-red-800 border-2 border-red-300"}
        = message
